//- Все примеси в этом файле должны начинаться c имени блока (form-checkbox)

mixin form-checkbox(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +form-checkbox('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' form-checkbox--' + modsList[i].trim();
      }
    }

  .form-checkbox(class=allMods)&attributes(attributes)
    label
      input(type="checkbox", name="")
      span 
