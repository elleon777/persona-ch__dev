//- Все примеси в этом файле должны начинаться c имени блока (select-filter)

mixin select-filter(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +select-filter('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' select-filter--' + modsList[i].trim();
      }
    }

  .select-filter(class=allMods)&attributes(attributes)
    span Показывать:
    button.filter-popup--open= text
