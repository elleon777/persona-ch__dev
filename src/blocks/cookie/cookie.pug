//- Все примеси в этом файле должны начинаться c имени блока (cookie)

mixin cookie(mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +cookie('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' cookie--' + modsList[i].trim();
      }
    }

  .cookie(class=allMods)&attributes(attributes)
    .cookie__inner
      .cookie__text Мы используем файлы cookie. Они помогают улучшить ваше взаимодействие с сайтом.
      .cookie__apply Хорошо
