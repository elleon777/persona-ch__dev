//- Все примеси в этом файле должны начинаться c имени блока (new-preview)

mixin new-preview(date, title, img, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +new-preview('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' new-preview--' + modsList[i].trim();
      }
    }

  .new-preview(class=allMods)&attributes(attributes)
    a.new-preview__inner(href="#")
      .new-preview__date= date
      .new-preview__title= title  
      if img == true
        .new-preview__img
          img(src="img/new-preview1.jpg" alt="")    